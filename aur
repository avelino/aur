#!/bin/bash
VERSION=0.1.2
if which pacaur >/dev/null; then
	AUR="pacaur"
else
	AUR="pacman"
fi
case $1 in
    "version")
		echo "aur helper version ${VERSION}"
		;;
    "clear" | "clean")
		$AUR -Sc
		;;
    "ls" | "list" | "freeze")
		$AUR -Q
		;;
    "up" | "upgrade" | "update")
		$AUR -Suy
		;;
    "search")
		shift
		$AUR -Ss $@
		;;
    "install")
		shift
		$AUR -S $@
		;;
    "rm" | "remove" | "delete")
		shift
		$AUR -R $@
		;;
    *)
		$AUR $@
		;;
esac
